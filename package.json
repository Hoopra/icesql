{
  "name": "icesql",
  "version": "1.0.2",
  "description": "query SQL databases with strict typing in Node.js",
  "main": "index.js",
  "scripts": {
    "build": "npm run clean && npm run compile",
    "clean": "rm -rf dist && mkdir dist",
    "compile": "ttsc --build tsconfig.build.json && cp package.json dist/ && cp readme.md dist/",
    "distribute": "npm run build && cd dist && npm publish --access=public",
    "test": "npm run test:unit",
    "test:unit": "cross-env NODE_ENV=test jest -c jest.config.unit.js",
    "test:integration": "ts-node ci/integrationTest.ts integration",
    "test:all": "ts-node ci/integrationTest.ts all"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Hoopra/ice-sql.git"
  },
  "author": "https://github.com/Hoopra",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Hoopra/ice-sql/issues"
  },
  "homepage": "https://github.com/Hoopra/ice-sql#readme",
  "dependencies": {
    "lodash.zip": "4.2.0",
    "mysql2": "2.3.3",
    "sqlstring": "2.3.2",
    "ssh2": "1.5.0",
    "wait-on": "^6.0.0"
  },
  "devDependencies": {
    "@types/jest": "27.4.0",
    "@types/lodash.zip": "4.2.6",
    "@types/mysql2": "github:types/mysql2",
    "@types/sqlstring": "2.3.0",
    "@types/ssh2": "0.5.50",
    "cross-env": "7.0.3",
    "jest": "27.4.7",
    "ts-jest": "27.1.2",
    "tslib": "2.3.1",
    "ttypescript": "^1.5",
    "typescript": "^4.5",
    "typescript-transform-paths": "^3.3.1"
  }
}
